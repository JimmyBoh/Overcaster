extends _layout

block content
	.row
		.col-md-12
			h1.center-text Welcome!
	.row
		.col-md-4.col-md-offset-4
			#quickStart.well
				.row
					.col-md-6
						button.btn.btn-danger.btn-block
							span.glyphicon.glyphicon-th
							p New Session
					.col-md-6
						button.btn.btn-info.btn-block(disabled='disabled')
							span.glyphicon.glyphicon-floppy-open
							p Continue Session
				.row
					.col-md-6
						button.btn.btn-warning.btn-block
							span.glyphicon.glyphicon-list-alt
							p New Element
					.col-md-6
						button.btn.btn-success.btn-block
							span.glyphicon.glyphicon-credit-card
							p New Layout
